    {{#results}}
    <div class="pkg">
      <h3>
        {{name}}
        &nbsp;
        <span title="Math.max(depended, starred, forks, watchers)" class="pkg_reactions">{{reactions}}</span>
      </h3>
      <div>
        {{#description}}
          <div class="desc">{{description}}</div>
        {{/description}}

        <div class="meta">
          {{#keywords}}
            <div>
              keywords: {{keywords}}
            </div>
          {{/keywords}}
          <div>
            modified: {{#time}}{{modified}}{{/time}}
          </div>

          <div class="npm">
            <img src="npm.png" />
            star: {{starred}},
            depended: {{depended}}
            <a class="link_npm" href="https://npmjs.org/package/{{name}}"> https://npmjs.org/package/{{name}}</a>
          </div>

          {{#github}}
          <div class="github">
            <img src="github.svg" class="github" />
            {{#has_github_count}}
              star: {{github_watchers_count}},
              fork: {{github_forks_count}}
            {{/has_github_count}}
             <a class="link_github" href="{{url}}">{{url}}</a>
          </div>
          {{/github}}

          <div class="maintainers">
            {{#maintainers}}
            {{#gravatar}}<img class="gravatar" src="{{gravatar}}" />{{/gravatar}}
            <a href="/search?query={{name}}">{{name}}</a> &nbsp;
            {{/maintainers}}
          </div>

        </div>
      </div>
    </div>
    {{/results}}

    {{#next}}
      <div><a href="{{url}}" rel="next">next</a></div>
    {{/next}}
